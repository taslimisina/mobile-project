<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="ir.sharif.mobile.project.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_habitEditFragment"
            app:destination="@id/habitEditFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_mainFragment_to_editTodoFragment"
            app:destination="@id/editTodoFragment" />
    </fragment>
    <fragment
        android:id="@+id/habitEditFragment"
        android:name="ir.sharif.mobile.project.ui.habits.HabitEditFragment"
        android:label="fragment_habit_edit"
        tools:layout="@layout/fragment_edit_habit" >
        <argument
            android:name="task"
            app:argType="ir.sharif.mobile.project.ui.habits.Task" />
    </fragment>
    <fragment
        android:id="@+id/editTodoFragment"
        android:name="ir.sharif.mobile.project.ui.todo.EditTodoFragment"
        android:label="fragment_edit_todo"
        tools:layout="@layout/fragment_edit_todo" >
        <argument
            android:name="todo"
            app:argType="ir.sharif.mobile.project.ui.model.Todo" />
    </fragment>
</navigation>